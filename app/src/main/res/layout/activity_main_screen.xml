<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".mainScreen"
    android:background="@drawable/gradient2">

    <TextView
    android:text="Exercise Friend"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/mainTitle"
    android:textSize="30dp"
    android:layout_centerHorizontal="true"
    android:textColor="#ffff"
        />

    <TextView
        android:text="Tip: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tip"
        android:layout_below="@id/mainTitle"
        android:textSize="30dp"
        android:paddingTop="20dp"
        android:textColor="#ffff"/>

    <TextView
    android:text="null"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/randomTip"
        android:layout_toRightOf="@id/tip"
        android:layout_below="@id/mainTitle"
        android:textSize="30dp"
        android:paddingTop="20dp"
        android:textColor="#ffff"/>
    <TextView
        android:text="null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/excerciseReminder"
        android:textSize="30dp"
        android:layout_above="@+id/enterResultsButton"
        android:textColor="#ffff"
      />

    <Button
        android:id="@+id/enterResultsButton"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Enter results"
        android:layout_alignParentBottom="true"
        style="@style/button_text"
        android:background="@drawable/red_button"


        />
    <Button
        android:id="@+id/viewResultsButton"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="View Summary"
        android:layout_toRightOf="@id/enterResultsButton"

        android:layout_alignParentBottom="true"
        style="@style/button_text"
        android:background="@drawable/red_button"

        />

</RelativeLayout>
